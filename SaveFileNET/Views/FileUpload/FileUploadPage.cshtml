
@{
    ViewData["Title"] = "FileUpload";  
}

<div class="container">
    <div class="row">
        <br />

        <div class="col-lg-12">
            <form method="post" asp-controller="FileUpload" asp-action="SaveFile" enctype="multipart/form-data">
                <div class="form-group">
                     <input type="file" id="FileArray" name="FileArray" multiple/>
                </div>

                <div class="form-group">
                    <br />
                    <button type="submit">Save File</button>
                </div>
            </form>
        </div>
    </div>
</div>

